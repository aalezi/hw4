<div class="container mt-5">
  <h1 class="mb-4">Create an Account</h1>

  <form action="/users" method="post" class="needs-validation" novalidate>
    <div class="mb-3">
      <label for="name_input" class="form-label">Name</label>
      <input type="text" class="form-control" name="name" id="name_input" placeholder="Enter your name" required>
      <div class="invalid-feedback">Please enter your name.</div>
    </div>

    <div class="mb-3">
      <label for="email_input" class="form-label">Email</label>
      <input type="email" class="form-control" name="email" id="email_input" placeholder="Enter your email" required>
      <div class="invalid-feedback">Please enter a valid email.</div>
    </div>

    <div class="mb-3">
      <label for="password_input" class="form-label">Password</label>
      <input type="password" class="form-control" name="password" id="password_input" placeholder="Enter your password" required>
      <div class="invalid-feedback">Password is required.</div>
    </div>

    <button type="submit" class="btn btn-primary">Sign Up</button>
  </form>
</div>
