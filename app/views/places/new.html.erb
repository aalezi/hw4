<div class="container mt-5">
  <h1 class="mb-4">New Place</h1>
  
  <% if @current_user == nil %>
    <div class="alert alert-warning" role="alert">
      Please log in first to add a new place.
    </div>
  <% else %>
    <form action="/places" method="post">
      <div class="mb-3">
        <label for="name_input" class="form-label">Name</label>
        <input type="text" name="name" id="name_input" class="form-control" required>
      </div>
      
      <button type="submit" class="btn btn-primary">Save</button>
    </form>

    <p class="mt-3">
      <a href="/places" class="btn btn-secondary">Back to Places</a>
    </p>
  <% end %>
</div>
